{{!
    @template tiny_medial/modal

    Modal to manage a link within the Tiny Editor.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:

    Example context (json):
    {

    }
}}

{{< core/modal }}

    {{$title}}
        {{#str}} modaltitle, tiny_medial {{/str}}
    {{/title}}

    {{$body}}
        <div class="embed-responsive embed-responsive-4by3">
            <iframe src="{{launchurl}}" id="mod_helixmedia_launchframe_{{elementid}}" class="embed-responsive-item overflow-auto border-0" 
                allow="microphone {{medialurl}}; camera {{medialurl}}; display-capture {{medialurl}};"
                allowfullscreen="true" webkitallowfullscreen="true" mozallowfullscreen="true"></iframe>
        </div>
    {{/body}}
    {{$footer}}
       <div class='container'><div class='row'><div class='col-6 text-left {{^embedopt}}d-none{{/embedopt}}'>
           {{#str}} inserttype, tiny_medial {{/str}}
            <select id="medial_insert_type_{{elementid}}" name="medial_insert_type" class="custom-select">
                <option value="iframe">{{#str}} iframe, tiny_medial {{/str}}</option>
                <option value="thumbnail">{{#str}} thumbnail, tiny_medial {{/str}}</option>
                <option value="link">{{#str}} link, tiny_medial {{/str}}</option>
            </select>
        </div><div class='col-6 text-right'>
            <div id="mod_helixmedia_launchframebutton_{{elementid}}" style='display:none'>
                <button type="button" class="btn btn-primary" data-action="save">
                    {{#str}} button_insertmedial, tiny_medial {{/str}}
                </button>
            </div>
        </div></div></div>
    {{/footer}}

{{/ core/modal }}
